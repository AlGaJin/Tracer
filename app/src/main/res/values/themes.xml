<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Tracer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="logo_picture">@drawable/logo1</item>
        <item name="fontFamily">@font/mplus1_regular</item>

        <item name="android:windowBackground">@color/primaryLight</item>
        <item name="colorControlNormal">@color/primaryDark</item>
        
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/lightAccent</item>

        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textColorHint">@color/shadow</item>

        <item name="bottomSheetDialogTheme">@style/MyDialogStyle</item>

        <item name="highLighted">#CF2839</item>
        <item name="contrastBackGround">#72FFFFFF</item>
    </style>

    <style name="MyBtnStyle" parent="">
        <item name="backgroundTint">@color/lightAccent</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="MyProgressBar" parent="">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:indeterminateDrawable">@drawable/ui_charging</item>
        <item name="android:padding">135dp</item>
    </style>

    <style name="HighLightText" parent="">
        <item name="android:textColor">@color/lightAccent</item>
        <item name="android:shadowColor">@color/primaryDark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabContainer" parent="">
        <item name="android:background">@color/primaryLight</item>
        <item name="android:elevation">3dp</item>

        <item name="tabTextColor">@color/burgundy</item>
        <item name="tabSelectedTextColor">@color/darkAccent</item>

        <item name="tabIndicatorColor">@color/darkAccent</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <style name="MySideNav" parent="">
        <item name="android:background">@color/primaryLight</item>
        <item name="itemBackground">@color/navigation_selector</item>
        <item name="itemIconTint">@color/text_selector</item>
        <item name="itemTextColor">@color/text_selector</item>
    </style>

    <style name="MyEditBtn">
        <item name="tint">@color/lightAccent</item>
        <item name="android:background">@drawable/util_rounder</item>
        <item name="android:backgroundTint">@color/primaryDark</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:backgroundTint">@color/primaryLight</item>
        <item name="android:navigationBarColor">@color/primaryLight</item>
    </style>

    <style name="MyCircleProgress" parent="">
        <item name="android:backgroundTint">#C633040E</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">?attr/highLighted</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:secondaryProgressTint">?attr/colorPrimaryDark</item>
        <item name="android:progressBackgroundTint">@color/rating_selector</item>
    </style>

    <style name="MySmallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">?attr/highLighted</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:secondaryProgressTint">?attr/colorPrimaryDark</item>
        <item name="android:progressBackgroundTint">@color/rating_selector</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/lightAccent</item>
        <item name="materialButtonStyle">@style/MyMaterialBtn</item>
    </style>
    <style name="MyMaterialBtn" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/darkAccent</item>
    </style>
    <style name="Theme.Tracer" parent="Base.Theme.Tracer" />
</resources>