<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Tracer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="logo_picture">@drawable/logo2</item>

        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryLight</item>
        <item name="colorAccent">@color/lightAccent</item>

        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>

    <style name="MyTabContainer" parent="">
        <item name="android:background">@color/primaryDark</item>
        <item name="android:elevation">3dp</item>

        <item name="tabTextColor">@color/darkAccent</item>
        <item name="tabSelectedTextColor">@color/lightAccent</item>

        <item name="tabIndicatorColor">@color/lightAccent</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorAnimationMode">fade</item>
    </style>

    <style name="MySideNav" parent="">
        <item name="android:background">@color/primaryDark</item>
        <item name="itemBackground">@color/dark_navigation_selector</item>
        <item name="itemIconTint">@color/dark_text_selector</item>
        <item name="itemTextColor">@color/dark_text_selector</item>
    </style>
</resources>