<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Tracer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="logo_picture">@drawable/logo2</item>
        <item name="fontFamily">@font/mplus1_regular</item>

        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryLight</item>
        <item name="colorAccent">@color/lightAccent</item>

        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/primaryDark</item>

        <item name="bottomSheetDialogTheme">@style/MyDialogStyle</item>

        <item name="highLighted">@color/lightAccent</item>
        <item name="contrastBackGround">#659F6D74</item>
    </style>

    <style name="HighLightText" parent="">
        <item name="android:textColor">@color/lightAccent</item>
        <item name="android:shadowColor">@color/lightAccent</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabContainer" parent="">
        <item name="android:background">@color/primaryDark</item>
        <item name="android:elevation">3dp</item>

        <item name="tabTextColor">@color/darkAccent</item>
        <item name="tabSelectedTextColor">@color/lightAccent</item>

        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@color/darkAccent</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorAnimationMode">fade</item>
    </style>

    <style name="MySideNav" parent="">
        <item name="android:background">@color/primaryDark</item>
        <item name="itemBackground">@color/dark_navigation_selector</item>
        <item name="itemIconTint">@color/dark_text_selector</item>
        <item name="itemTextColor">@color/dark_text_selector</item>
    </style>

    <style name="MyEditBtn">
        <item name="tint">@color/primaryDark</item>
        <item name="android:background">@drawable/util_rounder</item>
        <item name="android:backgroundTint">@color/lightAccent</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="android:navigationBarColor">@color/primaryDark</item>
    </style>

    <style name="MyCircleProgress" parent="">
        <item name="android:backgroundTint">#7AFFFFFF</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">?attr/highLighted</item>
        <item name="android:secondaryProgressTint">#E69BA4</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressBackgroundTint">@color/rating_selector</item>
    </style>

    <style name="MySmallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">?attr/highLighted</item>
        <item name="android:secondaryProgressTint">#E69BA4</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressBackgroundTint">@color/rating_selector</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/burgundy</item>
        <item name="materialButtonStyle">@style/MyMaterialBtn</item>
    </style>
    <style name="MyMaterialBtn" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lightAccent</item>
    </style>
</resources>